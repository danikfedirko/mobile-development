<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <EditText
        android:id="@+id/inputFirstName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="86dp"
        android:hint="Input your first name"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="149dp"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/inputLastName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/inputFirstName"
        android:layout_marginTop="137dp"
        android:layout_marginEnd="20dp"
        android:hint="Input your last name"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="149dp"
        android:layout_alignLeft="@+id/inputFirstName"
        android:layout_marginRight="20dp" />

    <EditText
        android:id="@+id/inputPhone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/inputFirstName"
        android:layout_marginTop="195dp"
        android:layout_marginEnd="20dp"
        android:inputType="number"
        android:hint="Input your number"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="149dp"
        android:layout_alignLeft="@+id/inputFirstName"
        android:layout_marginRight="20dp" />



    <EditText
        android:id="@+id/inputEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/inputFirstName"
        android:layout_centerVertical="true"
        android:layout_marginTop="97dp"
        android:layout_marginEnd="20dp"
        android:inputType="textEmailAddress"
        android:hint="Input your email"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="149dp"
        android:layout_alignLeft="@+id/inputFirstName"
        android:layout_marginRight="20dp" />


    <EditText
        android:id="@+id/inputPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/inputFirstName"
        android:layout_marginBottom="200dp"
        android:layout_marginEnd="20dp"
        android:hint="Input your password"
        android:inputType="textPassword"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="149dp"
        android:layout_alignLeft="@+id/inputFirstName"
        android:layout_marginRight="20dp" />

    <EditText
        android:id="@+id/inputConfirm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/inputFirstName"
        android:layout_marginBottom="140dp"
        android:layout_marginEnd="20dp"
        android:hint="Confirm your password"
        android:inputType="textPassword"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="149dp"
        android:layout_alignLeft="@+id/inputFirstName"
        android:layout_marginRight="20dp" />


    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:text="Submit"
        android:textAlignment="center"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="216dp" />


</RelativeLayout>